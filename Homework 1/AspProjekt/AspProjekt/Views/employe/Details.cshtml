@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AspProjekt.Models.EmployeeView
@{
    ViewBag.Title = "Details" ;
}
<!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" charset="utf-8" />
        <title>Index</title>
    </head>
    <body>
        <hr>

        <h2>Сотрудник под индификатором @*@Model.Id*@ </h2>

        <table border="1">
            <tr>
                <td>Имя</td>
                <td>Фамилия</td>
                <td>Очество</td>
                <td>Возвраст</td>
                <td>Дата рождения</td>
                <td>Департамен</td>
                <td>Должность</td>
                <td>Работает с</td>

            </tr>
            <tr>
                <td> @Model.FirstName</td>
                <td>@Model.SurName</td>
                <td>@Model.Patronymic</td>
                <td>@Model.Age</td>
                <td>@Model.Birth</td>
                <td>@Model.Departament</td>
                <td> @Model.WorkRole</td>
                <td>@Model.WorkingSince</td>

                <td>
                
                    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }))

                </td>

            </tr>

        </table>
        <div>
            <a asp-action="Index" asp-route-id="Employe">На Главную</a>
        </div>
    </body>
 </html>

